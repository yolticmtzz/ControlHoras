
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="inicio">Inicio</a></li>
                        <li class="breadcrumb-item active">Cambio Clave</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col-12">

                    <div class="card">
                        <div class="card-header">
                            <h3>@Session["Usuario_NOMBRE"]</h3>
                            <p>Perfil: @Session["Usuario_PERFIL_NOMBRE"]</p>

                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <form role="form" method="post" enctype="multipart/form-data" class="formAjaxAdd">
                                <div class="form-group">

                                    <label for="antiguaClave">Antigua contraseña: </label>

                                    <input type="password" class="form-control input-md" name="antiguaClave" id="antiguaClave" placeholder="Ingresar contraseña" required onkeypress="return checkClave(event)">

                                </div>
                                <div class="form-group">

                                    <label for="nuevaClave">Nueva contraseña: </label>

                                    <input type="password" class="form-control input-md" name="nuevaClave" placeholder="Ingresar contraseña" required onkeypress="return checkClave(event)">

                                </div>
                                <div class="form-group">

                                    <label for="exampleInputEmail1">Repita nueva contraseña: </label>

                                    <input type="password" class="form-control input-md" name="repetirNuevaClave" placeholder="Ingresar contraseña" required onkeypress="return checkClave(event)">

                                </div>
                                <div class="form-group pull-left">
                                    <button type="submit" class="btn btn-primary btnAjaxAdd">Gambiar contraseña</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

@section scripts
{
    <script src="~/Content/js/usuario-pass.js"></script>

}